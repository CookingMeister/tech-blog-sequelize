<%- include('partials/header') %>
<div class="background-dash p-3">

<div class="container mt-5">
  <h1 class="text-center clear yellow login">Login</h1>

  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /api/login route -->
          <form class="form">
            <div id="username" class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" />
            </div>
            <button class="btn btn-info login-btn" id="loginBtn">
              Login
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container alert-container mt-3">
  <div class="alert alert-danger d-none w-50 text-center m-auto" role="alert" id="alertMessage">
    Please enter a valid email address.
  </div>
  <div class="alert alert-danger d-none w-50 text-center m-auto" role="alert" id="alertRegisterMessage">
    Generated Message here.
  </div>
</div>

</div>

<script src="../js/login.js"></script>

<%- include('partials/footer') %>
