<%- include('partials/header.ejs') %>

<h1 class="d-flex justify-content-center m-5">Dashboard</h1>
<div class="container d-flex justify-content-start">
  <% if(posts.length > 0) { %>
  <ul>
    <% posts.forEach(post => { %>
    <li>
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <p>Author: <%= post.UserId %></p>
      <button class="btn btn-dark mx-1" onclick="location.href='/update-post/<%= post.id %>'">
        Update Post
      </button>
      <button class="btn btn-dark mx-1" onclick="location.href='/delete-post/<%= post.id %>'">
        Delete Post
      </button>
    </li>
    <% }) %>
  </ul>
  <% } else { %>
  <p>No posts found.</p>
  <% } %>
</div>

<%- include('partials/footer.ejs') %>
