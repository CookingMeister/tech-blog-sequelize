<%- include('partials/header') %>

<div class="opaque-background p-3">
  <!-- Register Section -->
<div class="container mt-5">
  <h1 class="text-center register yellow clear">Register</h1>

  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /register route -->
          <form action="/api/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-info register-btn">Register</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>
<!-- Alert Section -->
<div class="container alert-container mt-3">
  <div class="alert alert-danger d-none w-50 text-center m-auto" role="alert" id="alertMessage">
    Please enter a valid email address.
  </div>
</div>

</div>

<script src="../js/register.js"></script>

<%- include('partials/footer') %>
